<!-- inclure la libraire Chart.s --> 
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js" integrity="sha256-R4pqcOYV8lt7snxMQO/HSbVCFRPMdrhAFMH+vr9giYI=" crossorigin="anonymous"></script>

<script>
var ctx = document.getElementById('myChart');

//For a bar chart --> libellé & domanialité 
var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: ['Red', 'Blue', 'Yellow', 'Green', 'Purple', 'Orange'],
        datasets: [{
            label: '# of Votes',
            data: [12, 19, 3, 5, 2, 3],
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero: true
                }
            }]
        }
    }
});

// For a radar chart --> domanialité
var myRadarChart = new Chart(ctx, {
    type: 'radar',
    data: data,
    options: options
});
// For a bubble chart --> localisation
var myBubbleChart = new Chart(ctx, {
    type: 'bubble',
    data: data,
    options: options
});
//For a line chart --> hauteur & circonférence
var myLineChart = new Chart(ctx, {
    type: 'line',
    data: data,
    options: options
});
// For a pie chart --> localisation
var myPieChart = new Chart(ctx, {
    type: 'pie',
    data: data,
    options: options
});


</script>

